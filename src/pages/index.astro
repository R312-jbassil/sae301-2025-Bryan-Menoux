---
import Layout from "../layouts/Layout.astro";
import imageHero from "../assets/imageHero.png";
import checkIcon from "../assets/check.svg";
import image1 from "../assets/image-1.png";
import image2 from "../assets/image-2.png";
import image3 from "../assets/image-3.png";
---

<Layout title="Accueil">
  <main class="min-h-screen bg-transparent text-base-content">
    <section
      class="hero hero-offset max-w-7xl mx-auto px-4 py-12 md:py-20 lg:py-32 flex flex-col md:flex-col lg:flex-row items-center gap-8 md:gap-10 lg:gap-12"
    >
      <div
        class="hero-row w-full flex flex-col md:flex-col lg:flex-row items-center gap-8 md:gap-10 lg:gap-12"
      >
        <div class="hero-content-left w-full md:w-full lg:w-1/2 text-left">
          <h2
            class="text-2xl md:text-4xl lg:text-5xl font-extrabold text-primary mb-4 md:mb-6"
          >
            Créez vos lunettes, à votre image
          </h2>
          <p class="text-muted mb-4 md:mb-6 max-w-full md:max-w-md">
            Personnalisez monture, couleur et tailles. Dites-le en langage
            naturel ou utilisez nos contrôles simples. Fabrication française,
            style épuré.
          </p>
          <div
            class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3 sm:gap-6 mb-6 md:mb-8"
          >
            <a
              href="/configurateur"
              class="btn btn-primary hero-cta w-full sm:w-auto md:btn-lg lg:btn-lg"
              >Lancer le configurateur <span class="ml-2">→</span></a
            >
            <a
              href="/modele"
              class="btn btn-outline flex items-center gap-2 w-full sm:w-auto md:btn-lg lg:btn-lg justify-center"
            >
              <svg
                class="w-4 h-4"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
              Voir un modèle
            </a>
          </div>

          <div
            class="w-full flex flex-col sm:flex-row justify-center sm:justify-start gap-4 sm:gap-8 md:gap-10 text-sm text-primary"
          >
            <div class="flex flex-col items-center sm:items-start">
              <div class="text-xl md:text-2xl font-bold">4.8/5</div>
              <div class="text-xs sm:text-sm">Satisfaction client</div>
            </div>
            <div class="flex flex-col items-center sm:items-start">
              <div class="text-xl md:text-2xl font-bold">1000+</div>
              <div class="text-xs sm:text-sm">Configurations enregistrées</div>
            </div>
            <div class="flex flex-col items-center sm:items-start">
              <div class="text-xl md:text-2xl font-bold">48h</div>
              <div class="text-xs sm:text-sm">Fabrication</div>
            </div>
          </div>
        </div>

        <div
          class="hero-image w-full md:w-full lg:w-1/2 flex justify-center mt-4 md:mt-6 lg:mt-0"
        >
          <div
            class="image-card relative rounded-2xl overflow-hidden shadow-2xl max-w-[340px] md:max-w-[420px] lg:max-w-[520px] w-full"
          >
            <img
              src={imageHero.src}
              alt="Lunettes"
              class="w-full h-auto block"
            />
            <div
              class="absolute bottom-6 right-6 bg-white rounded-lg px-4 py-3 shadow flex flex-col items-center gap-1 w-fit"
            >
              <div class="text-xs text-gray-500">Fabrication</div>
              <div class="text-sm font-medium">Made in France</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Banderolle avec les avantages -->
    <section class="py-10 md:py-16" style="background-color: #FEFEFE;">
      <div class="max-w-7xl mx-auto px-4">
        <div
          class="flex flex-col md:flex-row items-center justify-between gap-6 md:gap-8"
        >
          <!-- Fabriqué en France -->
          <div class="flex items-center gap-3 md:gap-4 flex-1 md:flex-none">
            <div class="shrink-0">
              <img
                src={checkIcon.src}
                alt="Check"
                class="w-6 h-6 md:w-7 md:h-7 text-primary"
              />
            </div>
            <div>
              <div class="font-semibold text-sm md:text-base text-gray-900">
                Fabriqué en France
              </div>
              <div class="text-xs md:text-sm text-gray-500">Qualité locale</div>
            </div>
          </div>

          <!-- Garantie 2 ans -->
          <div class="flex items-center gap-3 md:gap-4 flex-1 md:flex-none">
            <div class="shrink-0">
              <img
                src={checkIcon.src}
                alt="Check"
                class="w-6 h-6 md:w-7 md:h-7 text-primary"
              />
            </div>
            <div>
              <div class="font-semibold text-sm md:text-base text-gray-900">
                Garantie 2 ans
              </div>
              <div class="text-xs md:text-sm text-gray-500">
                Protection assurée
              </div>
            </div>
          </div>

          <!-- Autogel soigné -->
          <div class="flex items-center gap-3 md:gap-4 flex-1 md:flex-none">
            <div class="shrink-0">
              <img
                src={checkIcon.src}
                alt="Check"
                class="w-6 h-6 md:w-7 md:h-7 text-primary"
              />
            </div>
            <div>
              <div class="font-semibold text-sm md:text-base text-gray-900">
                Autogel soigné
              </div>
              <div class="text-xs md:text-sm text-gray-500">
                Confort optimal
              </div>
            </div>
          </div>

          <!-- 1000+ configurations -->
          <div class="flex items-center gap-3 md:gap-4 flex-1 md:flex-none">
            <div class="shrink-0">
              <svg
                width="24"
                height="24"
                viewBox="0 0 16 16"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                class="w-6 h-6 md:w-7 md:h-7 text-primary"
