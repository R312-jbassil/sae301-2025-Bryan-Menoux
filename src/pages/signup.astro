---
import Layout from "../layouts/Layout.astro";
import cadenas from "../assets/cadenas.svg";
import shield from "../assets/shield.svg";
---

<Layout title="Inscription - TaVue">
  <div class="min-h-screen flex items-center justify-center bg-base-100 px-4">
    <div class="flex flex-col gap-8 w-full max-w-md">
      <div class="card bg-white shadow-lg rounded-2xl">
        <div class="card-body p-8 space-y-4">
          <div class="text-center">
            <h2 class="text-3xl font-semibold text-base-content mb-2">
              Créer un compte
            </h2>
            <p class="text-sm text-base-content/60">
              Inscrivez-vous pour accéder à<br />vos configurations et commandes
            </p>
          </div>

          <form id="signup-form" class="space-y-5">
            <div class="form-control">
              <label class="label pb-2">
                <span class="label-text text-sm font-semibold text-base-content"
                  >Prénom</span
                >
              </label>
              <input
                type="text"
                id="prenom"
                name="prenom"
                placeholder="Votre prénom"
                required
                class="w-full px-4 py-3 bg-gray-100 border-0 rounded-lg text-base-content placeholder:text-base-content/40 focus:outline-none focus:bg-gray-200 transition-colors"
              />
            </div>

            <div class="form-control">
              <label class="label pb-2">
                <span class="label-text text-sm font-semibold text-base-content"
                  >Nom</span
                >
              </label>
              <input
                type="text"
                id="nom"
                name="nom"
                placeholder="Votre nom"
                required
                class="w-full px-4 py-3 bg-gray-100 border-0 rounded-lg text-base-content placeholder:text-base-content/40 focus:outline-none focus:bg-gray-200 transition-colors"
              />
            </div>

            <div class="form-control">
              <label class="label pb-2">
                <span class="label-text text-sm font-semibold text-base-content"
                  >Adresse email</span
                >
              </label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="votre.email@exemple.fr"
                required
                class="w-full px-4 py-3 bg-gray-100 border-0 rounded-lg text-base-content placeholder:text-base-content/40 focus:outline-none focus:bg-gray-200 transition-colors"
              />
            </div>

            <div class="form-control">
              <label class="label pb-2">
                <span class="label-text text-sm font-semibold text-base-content"
                  >Mot de passe</span
                >
              </label>
              <div class="relative">
                <input
                  type="password"
                  id="password"
                  name="password"
                  placeholder="••••••••"
                  required
                  class="w-full px-4 py-3 bg-gray-100 border-0 rounded-lg text-base-content placeholder:text-base-content/40 focus:outline-none focus:bg-gray-200 transition-colors"
                />
                <button
                  type="button"
                  class="absolute right-4 top-1/2 -translate-y-1/2 text-base-content/60 hover:text-base-content transition-colors"
                  id="toggle-password"
                >
                  <svg
                    class="w-5 h-5"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"
                    ></path>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                </button>
              </div>
            </div>

            <div class="flex items-center gap-2 pt-2">
              <input
                type="checkbox"
                id="terms"
                name="terms"
                required
                class="checkbox checkbox-sm checkbox-primary"
              />
              <label
                for="terms"
                class="text-xs text-base-content/70 cursor-pointer"
              >
                J'accepte les <a
                  href="#"
                  class="text-primary font-medium hover:underline"
                  >conditions d'utilisations</a
                >
              </label>
            </div>

            <div class="flex items-center gap-2">
              <input
                type="checkbox"
                id="remember"
                name="remember"
                class="checkbox checkbox-sm checkbox-primary"
              />
              <label
                for="remember"
                class="text-xs text-base-content/70 cursor-pointer"
              >
                Se souvenir de moi
              </label>
            </div>

            <button
              type="submit"
              class="btn btn-primary w-full h-11 font-semibold mt-6"
              >S'inscrire <span class="ml-1">→</span></button
            >
          </form>

          <div class="flex items-center gap-4 my-2">
            <div class="flex-1 h-px bg-base-300"></div>
            <span class="text-xs text-base-content/60 font-medium"
              >Ou continuer avec</span
            >
            <div class="flex-1 h-px bg-base-300"></div>
          </div>

          <div class="flex gap-4 justify-center">
            <button
              type="button"
              class="btn btn-outline btn-circle h-12 w-12 flex items-center justify-center"
              title="Facebook"
            >
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                ></path>
              </svg>
            </button>
            <button
              type="button"
              id="google-signup-btn"
              class="btn btn-outline btn-circle h-12 w-12 flex items-center justify-center"
              title="Google"
            >
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                ></path>
                <path
                  d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                ></path>
                <path
                  d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                ></path>
                <path
                  d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                ></path>
              </svg>
            </button>
            <button
              type="button"
              class="btn btn-outline btn-circle h-12 w-12 flex items-center justify-center"
              title="GitHub"
            >
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v 3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </button>
          </div>

          <p class="text-center text-sm text-base-content/70 pt-2">
            Vous possédez déjà un compte ?
            <a href="/login" class="text-primary font-semibold hover:underline"
              >Connexion</a
            >
          </p>

          <div
            id="success-message"
            class="hidden alert alert-success text-sm pr-12 relative"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="stroke-current shrink-0 h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              ><circle cx="12" cy="12" r="10"></circle><path d="M8 12l2 2 4-4"
              ></path></svg
            >
            <span id="success-text">Compte créé avec succès !</span>
            <button
              class="absolute right-3 top-1/2 -translate-y-1/2 btn btn-ghost btn-xs"
              onclick="document.getElementById('success-message').classList.add('hidden')"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"></path></svg
              >
            </button>
          </div>

          <div
            id="error-message"
            class="hidden alert alert-error text-sm pr-12 relative"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="stroke-current shrink-0 h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              ><circle cx="12" cy="12" r="10"></circle><path
                d="M8 8l8 8M16 8l-8 8"></path></svg
            >
            <span id="error-text"></span>
            <button
              class="absolute right-3 top-1/2 -translate-y-1/2 btn btn-ghost btn-xs"
              onclick="document.getElementById('error-message').classList.add('hidden')"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"></path></svg
              >
            </button>
          </div>
        </div>
      </div>

      <div class="flex justify-center gap-8 px-4">
        <div class="flex items-center gap-2 text-xs text-base-content/70">
          <img src={cadenas.src} alt="Cadenas" class="w-4 h-4" />
          Connexion sécurisée
        </div>
        <div class="flex items-center gap-2 text-xs text-base-content/70">
          <img src={shield.src} alt="Shield" class="w-4 h-4" />
          Données protégées
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const togglePasswordBtn = document.getElementById("toggle-password");
  const passwordInput = document.getElementById("password") as HTMLInputElement;

  togglePasswordBtn?.addEventListener("click", () => {
    const type =
      passwordInput.getAttribute("type") === "password" ? "text" : "password";
    passwordInput.setAttribute("type", type);
  });

  const signupForm = document.getElementById("signup-form");
  signupForm?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const prenom = (document.getElementById("prenom") as HTMLInputElement)
      .value;
    const nom = (document.getElementById("nom") as HTMLInputElement).value;
    const email = (document.getElementById("email") as HTMLInputElement).value;
    const password = (document.getElementById("password") as HTMLInputElement)
      .value;
    const terms = (document.getElementById("terms") as HTMLInputElement)
      .checked;
    const remember = (document.getElementById("remember") as HTMLInputElement)
      .checked;

    if (!terms) {
      alert("Vous devez accepter les conditions d'utilisation");
      return;
    }

    try {
      const response = await fetch("/apis/signup", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          prenom_utilisateur: prenom,
          nom_utilisateur: nom,
          email,
          password,
          passwordConfirm: password,
          remember,
        }),
      });

      if (response.ok) {
        const data = await response.json();
        const errorDiv = document.getElementById("error-message");
        if (errorDiv) {
          errorDiv.classList.add("hidden");
        }
        const successDiv = document.getElementById("success-message");
        if (successDiv) {
          successDiv.classList.remove("hidden");
          setTimeout(() => {
            if (remember) {
              window.location.href = "/";
            } else {
              window.location.href = "/login";
            }
          }, 1500);
        }
      } else {
        const error = await response.json();
        const successDiv = document.getElementById("success-message");
        if (successDiv) {
          successDiv.classList.add("hidden");
        }
        const errorDiv = document.getElementById("error-message");
        const errorText = document.getElementById("error-text");
        if (errorText && errorDiv) {
          errorText.textContent = error.error || "Erreur lors de l'inscription";
          errorDiv.classList.remove("hidden");
        }
      }
    } catch (error) {
      console.error("Erreur d'inscription:", error);
      const successDiv = document.getElementById("success-message");
      if (successDiv) {
        successDiv.classList.add("hidden");
      }
      const errorDiv = document.getElementById("error-message");
      const errorText = document.getElementById("error-text");
      if (errorText && errorDiv) {
        errorText.textContent = "Une erreur est survenue lors de l'inscription";
        errorDiv.classList.remove("hidden");
      }
    }
  });

  const googleSignupBtn = document.getElementById("google-signup-btn");
  googleSignupBtn?.addEventListener("click", async () => {
    try {
      const errorDiv = document.getElementById("error-message");
      const errorText = document.getElementById("error-text");

      const { default: pb } = await import("../lib/pocketbase.js");

      pb.authStore.clear();

      await pb.collection("utilisateur").authWithOAuth2({
        provider: "google",
      });

      const token = pb.authStore.token;
      const record = JSON.parse(JSON.stringify(pb.authStore.model || {}));

      if (!token || !record?.id) {
        throw new Error("OAuth missing token or record");
      }

      const remember = (document.getElementById("remember") as HTMLInputElement)
        ?.checked;

      const response = await fetch("/apis/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          token,
          record,
          remember,
        }),
        credentials: "include",
      });

      if (!response.ok) {
        throw new Error("Failed to finalize session");
      }

      pb.authStore.clear();

      const successDiv = document.getElementById("success-message");
      const successText = document.getElementById("success-text");
      if (successText && successDiv) {
        successText.textContent = "Compte créé et connexion réussie !";
        successDiv.classList.remove("hidden");
      }

      setTimeout(() => {
        let redirectUrl = "/configurateur";

        if (document.referrer) {
          try {
            const referrerUrl = new URL(document.referrer);
            if (referrerUrl.origin === window.location.origin) {
              if (
                !referrerUrl.pathname.includes("/login") &&
                !referrerUrl.pathname.includes("/signup")
              ) {
                redirectUrl = document.referrer;
              } else {
                redirectUrl = "/";
              }
            }
          } catch (e) {
            redirectUrl = "/";
          }
        }

        window.location.href = redirectUrl;
      }, 1500);
    } catch (error) {
      console.error("Google signup error:", error);
      const errorDiv = document.getElementById("error-message");
      const errorText = document.getElementById("error-text");
      if (errorText && errorDiv) {
        errorText.textContent =
          "Erreur lors de la connexion avec Google. Vérifiez que Google OAuth est configuré.";
        errorDiv.classList.remove("hidden");
      }
    }
  });
</script>

<style>
  .card {
    transition: none !important;
  }

  .card:hover {
    transform: none !important;
  }
</style>
